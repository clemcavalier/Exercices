package project;

import java.io.*; 

public class TailleFichier {

	public static void main(String[] args) {
		
		File myFile = new File("/Users/clementcavalier/Desktop/Sans titre.txt");
		
		if (myFile.exists()) {
			double octets = myFile.length();
			System.out.println("le fichier est égal à "+octets+" octets");
		} else { 
			System.out.println("le fichier n'existe pas");
		}

	}

}
